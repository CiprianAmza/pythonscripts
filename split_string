def split_string(st):
    
    values = {}

    for i, j in enumerate(st):
        if j not in values:
            values[j] = [i, i]
        else:
            values[j] = [values[j][0], i]
    
    vals = list(values.values())
    vals.sort()
    
    changes = True
    while changes:
        changes = False
        vals = [el for el in vals if el]
        for i in range(1, len(vals)):
            a, b = vals[i-1]
            c, d = vals[i]
            if b < c: 
                continue
            else:
                vals[i-1] = []
                vals[i] = [a, max(b, d)]
                changes = True
                break

    return [j-i+1 for i, j in vals]
