function displayValue(value) {
    
  let values = [1, 60, 60*24, 60*24*7, 60*24*7*4, 60*24*7*4*28];
  let elements = "month week day hour minute".split(" ");
  let ans = [];
  
  for (let i = values.length - 1; i >= 0; i--) {
    let val = values[i];
    if (value < val) continue;
    let rem = Math.floor(value / val);
    value = value - rem * val;
    if (rem > 0) {
      ans.push(rem + " " + elements[elements.length - i - 1] + (rem > 1 ? "s": ""));
    }
  }
  
  return ans.join(" ");
}
