pi = 3.1415926535 

def sphere_area(r):
    return round(4 * pi * r * r, 3)

def circle_area(r, h, d):
    return round(pi * d * d, 3)

def circle_perimeter(r, h, d):
    return round(pi * d * 2, 3)

def stereometry(r, h):
    
    d = (r**2 - h**2) **.5
    
    return sphere_area(r), circle_area(r, h, d), circle_perimeter(r, h, d)
