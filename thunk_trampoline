function thunk(fn, ...args) {
  
  return () => fn(...args);
}

function trampoline(s) {
  
  let f = s();
  
  while (f instanceof Function)
    f = f();
  
  return f;
};

function isEvenStep(n) {

  return n === 0 ? true : thunk(isOddStep, n - 1);
}

function isOddStep(n) {

  return n === 0 ? false : thunk(isEvenStep, n - 1);
}

function isEven(n) {
  
  return trampoline(thunk(isEvenStep, n));
}

function isOdd(n) {
  
  return trampoline(thunk(isOddStep, n));
}
